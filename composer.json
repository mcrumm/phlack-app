{
    "name": "mcrumm/phlack-app",
    "description": "Silex Application running Phlack",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Crumm",
            "email": "mike@crumm.net"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mcrumm/phlack"
        }
    ],
    "require": {
        "php": ">=5.4",
        "silex/silex": "~1.1",
        "monolog/monolog": ">=1.0.0",
        "mcrumm/phlack": "dev-develop@dev",
        "symfony/expression-language": "~2.4",
        "stack/builder": "~1.0@dev",
        "stack/url-map": "~1.0@dev",
        "stack/run": "~1.0@dev"
    },
    "config": {
        "bin-dir":"bin/"
    },
    "autoload": {
        "psr-0": {
            "": "src"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "heroku": {
            "document-root":    "web",
            "index-document":   "index.php"
        }
    }
}
